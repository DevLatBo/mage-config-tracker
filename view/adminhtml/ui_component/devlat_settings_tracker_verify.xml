<?xml version="1.0"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                devlat_settings_tracker_verify.devlat_settings_tracker_data_source
            </item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Devlat\Settings\Block\Adminhtml\Tracker\Verification\Button\Back"/>
        </buttons>
        <namespace>devlat_settings_tracker_verify</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>devlat_settings_tracker_verify.devlat_settings_tracker_data_source</dep>
        </deps>
    </settings>
    <dataSource name="devlat_settings_tracker_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <dataProvider class="Devlat\Settings\Ui\DataProvider\Config" name="devlat_settings_tracker_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="devlat_settings_tracker_fieldset">
        <settings>
            <label/>
        </settings>
        <field name="id" formElement="hidden"/>
        <field name="section" formElement="input">
            <settings>
                <elementTmpl>ui/form/element/text</elementTmpl>
                <label translate="true">Section</label>
            </settings>
        </field>
        <field name="path" formElement="input">
            <settings>
                <elementTmpl>ui/form/element/text</elementTmpl>
                <label translate="true">Path</label>
            </settings>
        </field>
        <field name="configurated_at" formElement="input">
            <settings>
                <elementTmpl>ui/form/element/text</elementTmpl>
                <label translate="true">Configurated At</label>
            </settings>
        </field>
        <field name="verified" formElement="input">
            <settings>
                <elementTmpl>Devlat_Settings/form/element/verified_bool</elementTmpl>
                <label translate="true">Verified</label>
            </settings>
        </field>
        <field name="verified_by" formElement="input">
            <settings>
                <elementTmpl>Devlat_Settings/form/element/list_users_verified</elementTmpl>
                <label translate="true">Verified By</label>
            </settings>
        </field>
        <htmlContent name="group_title">
            <argument name="block" xsi:type="object">Devlat\Settings\Block\Adminhtml\Verification</argument>
        </htmlContent>
    </fieldset>
</form>
